# JCW Trade Hub - Environment Configuration Template
# Copy this file to .env and update the values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./trading.db

# Environment Settings
ENVIRONMENT=production
DEBUG=false

# CORS Settings
FRONTEND_URL=https://jcwtradehub.com
ALLOWED_ORIGINS=["https://jcwtradehub.com", "http://localhost:3000"]

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=JCW Trade Hub

# Security
SECRET_KEY=jcw_trade_hub_secret_key_2024_secure_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Trading Configuration
DEFAULT_PORTFOLIO_VALUE=100000
MAX_POSITION_SIZE=0.1
RISK_MANAGEMENT_ENABLED=true

# Market Data
MARKET_DATA_PROVIDER=yfinance
UPDATE_INTERVAL_SECONDS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
# Environment Variables for AI Trading Dashboard
# Copy this file to .env and add your real API keys

# Alpha Vantage API (for real market data)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# News API (for sentiment analysis)
# Get your free key at: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# OpenAI API (for AI analysis)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./trading.db

# Trading Configuration
TRADING_MODE=paper  # paper or live
DEFAULT_POSITION_SIZE=1000
MAX_RISK_PER_TRADE=0.02
STOP_LOSS_PERCENTAGE=0.05

# Technical Indicators
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# News Analysis
NEWS_SENTIMENT_THRESHOLD=0.1
NEWS_UPDATE_INTERVAL=300  # seconds

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.75
AI_TRADING_ENABLED=false
AI_MAX_TRADES_PER_DAY=10

# Market Data Configuration
USE_YAHOO_FINANCE_BACKUP=true
MARKET_DATA_CACHE_DURATION=60  # seconds
REAL_TIME_UPDATES=true